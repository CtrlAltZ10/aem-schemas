{	
	"$schema": "http://json-schema.org/draft/2020-12/schema#",
	"$id": "/aem-schemas/global/name.json",
	
	"type": "object",
	"properties": {
		"name": { 
			"type": "object",
			"required": [ "firstName", "lastName" ],
			"properties": {
				"firstName": {
					"description": "First Name",
					"type": "string",
					"maxLength": 30,
					"pattern": "^([a-zA-Z]|[à-ü]|[À-Ü])+(([\\ \\'\\.\\-][a-zA-Z]|[à-ü]|[À-Ü])?[a-zA-Z]|[à-ü]|[À-Ü]*)*$"
				},
				"middleName": {
					"description": "Middle Name",
					"type": "string",
					"maxLength": 30,
					"pattern": "^([a-zA-Z]|[à-ü]|[À-Ü])+(([\\ \\'\\.\\-][a-zA-Z]|[à-ü]|[À-Ü])?[a-zA-Z]|[à-ü]|[À-Ü]*)*$"
				},
				"lastName": {
					"description": "Last Name",
					"type": "string",
					"maxLength": 30,
					"pattern": "^([a-zA-Z]|[à-ü]|[À-Ü])+(([\\ \\'\\.\\-][a-zA-Z]|[à-ü]|[À-Ü])?[a-zA-Z]|[à-ü]|[À-Ü]*)*$"
				},
				"suffix": {
					"description": "Suffix",
					"type": "string",
					"maxLength": 30,
					"pattern": "^([a-zA-Z]|[à-ü]|[À-Ü])+(([\\ \\'\\.\\-][a-zA-Z]|[à-ü]|[À-Ü])?[a-zA-Z]|[à-ü]|[À-Ü]*)*$"
				}
			}
		}
	}
}
